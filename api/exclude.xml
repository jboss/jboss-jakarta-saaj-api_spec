<FindBugsFilter>

    <!--
    Cannot rename existing APIs
    -->
    <Match>
        <Or>
            <Class name="jakarta.xml.soap.Node"/>
            <Class name="jakarta.xml.soap.Text"/>
        </Or>
        <Bug pattern="NM_SAME_SIMPLE_NAME_AS_INTERFACE"/>
    </Match>

    <!--
    Safer implementation with null check, especially when changes are made
    -->
    <Match>
        <Class name="jakarta.xml.soap.FactoryFinder"/>
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_OF_NONNULL_VALUE"/>
    </Match>

    <!--
    Need to be able to log exception
    -->
    <Match>
        <Class name="jakarta.xml.soap.FactoryFinder"/>
        <Bug pattern="REC_CATCH_EXCEPTION"/>
    </Match>

    <!--
    Existing clients may rely on null
    -->
    <Match>
        <Class name="jakarta.xml.soap.MimeHeaders"/>
        <Bug pattern="PZLA_PREFER_ZERO_LENGTH_ARRAYS"/>
    </Match>
</FindBugsFilter>
